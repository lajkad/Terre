<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjectLasVegas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:UI="using:Microsoft.Advertising.WinRT.UI"
    x:Class="ProjectLasVegas.MainPage"
    mc:Ignorable="d">

    <Page.Resources>
        <Storyboard x:ConnectionId='1' x:Name="spinalone">
            <DoubleAnimation To="360" RepeatBehavior="Forever" 
         Storyboard.TargetName="alonebottle"
         Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" />

        </Storyboard>
        <Storyboard x:ConnectionId='2' x:Name="spinatclass">
            <DoubleAnimation To="360" RepeatBehavior="Forever" 
         Storyboard.TargetName="atclassbottle"
         Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" />
        </Storyboard>
        <Storyboard x:ConnectionId='3' x:Name="spincouple">
            <DoubleAnimation To="360" RepeatBehavior="Forever" 
         Storyboard.TargetName="couplebottle"
         Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" />
        </Storyboard>
        <Storyboard x:ConnectionId='4' x:Name="spindrunks">
            <DoubleAnimation To="360" RepeatBehavior="Forever" 
         Storyboard.TargetName="drunksbottle"
         Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" />
        </Storyboard>
        <Storyboard x:ConnectionId='5' x:Name="spinfamily">
            <DoubleAnimation To="360" RepeatBehavior="Forever" 
         Storyboard.TargetName="familybottle"
         Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" />
        </Storyboard>
        <Storyboard x:ConnectionId='6' x:Name="spinfriends">
            <DoubleAnimation To="360" RepeatBehavior="Forever" 
         Storyboard.TargetName="friendsbottle"
         Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" />
        </Storyboard>
        <Storyboard x:ConnectionId='7' x:Name="spinsquare">
            <DoubleAnimation To="360" RepeatBehavior="Forever" 
         Storyboard.TargetName="squarebottle"
         Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" />
        </Storyboard>
        <Storyboard x:ConnectionId='8' x:Name="spinthebests">
            <DoubleAnimation To="360" RepeatBehavior="Forever" 
         Storyboard.TargetName="thebestsbottle"
         Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)" />
        </Storyboard>
    </Page.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="/Assets/Bottles/Table.png" AlignmentX="Center" AlignmentY="Center"></ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Pivot>
                <PivotItem x:ConnectionId='10' x:Name="Alone" x:Uid="Alone" Header="sozinho">
                    <Grid>
                        <Image x:ConnectionId='25' x:Name="alonebottle" HorizontalAlignment="Stretch" RenderTransformOrigin=".5,.5" VerticalAlignment="Stretch" Margin="0,0,0,50" 
                                   Source="Assets/Bottles/Alone.png" 
                                                                              >
                            <Image.RenderTransform>
                                <RotateTransform></RotateTransform>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </PivotItem>
                <PivotItem x:ConnectionId='11' x:Name="AtClass" x:Uid="AtClass" Header="em sala de aula">
                    <Grid>
                        <Image x:ConnectionId='24' x:Name="atclassbottle" HorizontalAlignment="Stretch" RenderTransformOrigin=".5,.5" VerticalAlignment="Stretch" Margin="0,0,0,50" Source="Assets/Bottles/AtClass.png"                                              >
                            <Image.RenderTransform>
                                <RotateTransform></RotateTransform>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </PivotItem>
                <PivotItem x:ConnectionId='12' x:Name="Couple" x:Uid="Couple" Header="casais">
                    <Grid>
                        <Image x:ConnectionId='23' x:Name="couplebottle" HorizontalAlignment="Stretch" RenderTransformOrigin=".5,.5" VerticalAlignment="Stretch" Margin="0,0,0,50" Source="Assets/Bottles/Couple.png"                                             >
                            <Image.RenderTransform>
                                <RotateTransform></RotateTransform>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </PivotItem>
                <PivotItem x:ConnectionId='13' x:Name="Drunks" x:Uid="Drunks" Header="bêbados">
                    <Grid>
                        <Image x:ConnectionId='22' x:Name="drunksbottle" HorizontalAlignment="Stretch" RenderTransformOrigin=".5,.5" VerticalAlignment="Stretch" Margin="0,0,0,50" Source="Assets/Bottles/Drunks.png"                                             >
                            <Image.RenderTransform>
                                <RotateTransform></RotateTransform>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </PivotItem>
                <PivotItem x:ConnectionId='14' x:Name="Family" x:Uid="Family" Header="familía">
                    <Grid>
                        <Image x:ConnectionId='21' x:Name="familybottle" HorizontalAlignment="Stretch" RenderTransformOrigin=".5,.5" VerticalAlignment="Stretch" Margin="0,0,0,50" Source="Assets/Bottles/Family.png"                                             >
                            <Image.RenderTransform>
                                <RotateTransform></RotateTransform>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </PivotItem>
                <PivotItem x:ConnectionId='15' x:Name="Friends" x:Uid="Friends" Header="amigos">
                    <Grid>
                        <Image x:ConnectionId='20' x:Name="friendsbottle" HorizontalAlignment="Stretch" RenderTransformOrigin=".5,.5" VerticalAlignment="Stretch" Margin="0,0,0,50" Source="Assets/Bottles/Friends.png"                                              >
                            <Image.RenderTransform>
                                <RotateTransform></RotateTransform>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </PivotItem>
                <PivotItem x:ConnectionId='16' x:Name="Square" x:Uid="Square" Header="na praça">
                    <Grid>
                        <Image x:ConnectionId='19' x:Name="squarebottle" HorizontalAlignment="Stretch" RenderTransformOrigin=".5,.5" VerticalAlignment="Stretch" Margin="0,0,0,50" Source="Assets/Bottles/Square.png"                                             >
                            <Image.RenderTransform>
                                <RotateTransform></RotateTransform>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </PivotItem>
                <PivotItem x:ConnectionId='17' x:Name="TheBests" x:Uid="TheBests" Header="com as bests">
                    <Grid>
                        <Image x:ConnectionId='18' x:Name="thebestsbottle" HorizontalAlignment="Stretch" RenderTransformOrigin=".5,.5" VerticalAlignment="Stretch" Margin="0,0,0,50" Source="Assets/Bottles/TheBests.png"                                               >
                            <Image.RenderTransform>
                                <RotateTransform></RotateTransform>
                            </Image.RenderTransform>
                        </Image>
                    </Grid>
                </PivotItem>
            </Pivot>
        </Grid>
        <Grid Grid.Row="1">
            <UI:AdControl x:ConnectionId='9' x:Name="Ad" HorizontalAlignment="Center" Height="50" VerticalAlignment="Center" Width="300"/>
        </Grid>
    </Grid>
</Page>

