<Page
    x:Class="ProjectLyon.MasterPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ProjectLyon"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <SplitView x:ConnectionId='1' CompactPaneLength="50" x:Name="MySliptView" OpenPaneLength="300" DisplayMode="CompactOverlay" >
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:ConnectionId='2' x:Name="VisualStateGroup">
                <VisualState x:ConnectionId='3' x:Name="VisualState000min">
                    <VisualState.Setters>
                        <Setter Target="MySliptView.(SplitView.IsPaneOpen)" Value="False"/>
                        <Setter Target="MySliptView.(SplitView.DisplayMode)" Value="Overlay"/>
                        <Setter Target="btnMenu2.(UIElement.Visibility)" Value="Visible"/>
                    </VisualState.Setters>
                    <!--<VisualState.StateTriggers>
                        <AdaptiveTrigger/>
                    </VisualState.StateTriggers>-->
                </VisualState>
                <VisualState x:ConnectionId='4' x:Name="VisualState641min">
                    <!--<VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="641"/>
                    </VisualState.StateTriggers>-->
                </VisualState>
                <VisualState x:ConnectionId='5' x:Name="VisualState941min">
                    <VisualState.Setters>
                        <Setter Target="MySliptView.(SplitView.IsPaneOpen)" Value="True"/>
                    </VisualState.Setters>
                    <!--<VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="941"/>
                    </VisualState.StateTriggers>-->
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <SplitView.Pane>
            <StackPanel Background="#1b1b1b">
                <StackPanel Background="Purple" Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" Background="Purple" >
                        <Button x:ConnectionId='26'  x:Name="btnMenu" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                                Width="50" Height="50"                      ></Button>
                    </StackPanel>
                </StackPanel>
                <StackPanel x:ConnectionId='6' x:Name="stpHome"                                                                                                   Orientation="Horizontal">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition Width="45"></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid x:ConnectionId='23' Grid.Column="0" x:Name="gridHome" Background="Transparent"></Grid>
                        <HyperlinkButton x:ConnectionId='24' Grid.Column="1" x:Name="btnHome" Foreground="White"  FontFamily="Segoe MDL2 Assets" Content="&#xE10F;"
                        Width="45" Height="50" Background="Transparent">
                            <HyperlinkButton.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </HyperlinkButton.ContentTemplate>
                        </HyperlinkButton>
                        <TextBlock x:ConnectionId='25' Grid.Column="2" x:Name="txtHome" x:Uid="txtHome" Text="Home" FontSize="18" Foreground="White" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
                <StackPanel x:ConnectionId='7' x:Name="stpBand"                                                                                                   Orientation="Horizontal">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition Width="45"></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid x:ConnectionId='20' Grid.Column="0" x:Name="gridBand" Background="Transparent"></Grid>
                        <HyperlinkButton x:ConnectionId='21' Grid.Column="1" x:Name="btnBand" Foreground="White" FontFamily="Segoe MDL2 Assets" Content="&#xE735;"
                        Width="45" Height="50" Background="Transparent">
                            <HyperlinkButton.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </HyperlinkButton.ContentTemplate>
                        </HyperlinkButton>
                        <TextBlock x:ConnectionId='22' Grid.Column="2" x:Name="txtBand" x:Uid="txtBand" Text="Microsoft Band" FontSize="18" Foreground="White" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
                <StackPanel x:ConnectionId='8' x:Name="stpSetting"                            Orientation="Horizontal"                                                                                >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition Width="45"></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid x:ConnectionId='17' Grid.Column="0" x:Name="gridSettings" Background="Transparent"></Grid>
                        <HyperlinkButton x:ConnectionId='18' Grid.Column="1" x:Name="btnSettings" Foreground="White"  FontFamily="Segoe MDL2 Assets" Content="&#59155;"
                        Width="45" Height="50" Background="Transparent">
                            <HyperlinkButton.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </HyperlinkButton.ContentTemplate>
                        </HyperlinkButton>
                        <TextBlock x:ConnectionId='19' Grid.Column="2" x:Name="txtSettings" x:Uid="txtSettings" Text="Settings" FontSize="18" Foreground="White" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
                <StackPanel x:ConnectionId='9' x:Name="stpHelp"                        Orientation="Horizontal"                                                                          >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition Width="45"></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid x:ConnectionId='14' Grid.Column="0" x:Name="gridHelp" Background="Transparent"></Grid>
                        <HyperlinkButton x:ConnectionId='15' Grid.Column="1" x:Name="btnHelp" Foreground="White"  FontFamily="Segoe MDL2 Assets" Content="&#xE897;"
                        Width="45" Height="50" Background="Transparent">
                            <HyperlinkButton.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </HyperlinkButton.ContentTemplate>
                        </HyperlinkButton>
                        <TextBlock x:ConnectionId='16' Grid.Column="2" x:Name="txtHelp" x:Uid="txtHelp" Text="Help" FontSize="18" Foreground="White" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
                <StackPanel x:ConnectionId='10' x:Name="stpAbout"                         Orientation="Horizontal"                                                                            >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5"></ColumnDefinition>
                            <ColumnDefinition Width="45"></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid x:ConnectionId='11' Grid.Column="0" x:Name="gridAbout" Background="Transparent"></Grid>
                        <HyperlinkButton x:ConnectionId='12' Grid.Column="1" x:Name="btnAbout" Foreground="White" FontFamily="Segoe MDL2 Assets" Content="&#xE171;"
                        Width="45" Height="50" Background="Transparent">
                            <HyperlinkButton.ContentTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" />
                                </DataTemplate>
                            </HyperlinkButton.ContentTemplate>
                        </HyperlinkButton>
                        <TextBlock x:ConnectionId='13' Grid.Column="2" x:Name="txtAbout" x:Uid="txtAbout" Text="About" FontSize="18" Foreground="White" VerticalAlignment="Center" />
                    </Grid>
                </StackPanel>
            </StackPanel>
        </SplitView.Pane>
        <SplitView.Content>
            <Grid x:ConnectionId='27' x:Name="mainFrame">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Background="Purple" Grid.Row="0">
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='29'  x:Name="btnMenu2" Visibility="Collapsed" FontFamily="Segoe MDL2 Assets" Content="&#xE700;"
                                Width="50" Height="50"                      ></Button>
                    </StackPanel>
                </Grid>
                <Frame x:ConnectionId='28' Grid.Row="1" x:Name="frameBody"></Frame>
            </Grid>
        </SplitView.Content>
    </SplitView>
</Page>

