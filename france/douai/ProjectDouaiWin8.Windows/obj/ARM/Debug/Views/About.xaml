    <Page.BottomAppBar>
        <CommandBar IsOpen="True">
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='10' Icon="Home" x:Name="btnHome" x:Uid="/Shared/wtxtHome" Label="Home"                    />
                <AppBarButton x:ConnectionId='11' Icon="Help" x:Name="btnHelp" x:Uid="/Shared/wtxtHelp" Label="Help"                    />
                <AppBarButton x:ConnectionId='12' Icon="Contact" x:Name="btnAbout" x:Uid="/Shared/wtxtAbout" Label="About"                     />
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Page.BottomAppBar>
