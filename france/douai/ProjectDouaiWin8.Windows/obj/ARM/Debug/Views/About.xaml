                                </Grid.ColumnDefinitions>
                                <Button x:ConnectionId='1'                       x:Uid="/Shared/FollowTwitter" Content="Follow me on Twitter" Name="Twitter" Grid.Column="0" Height="50" HorizontalAlignment="Center"/>
                                <Button x:ConnectionId='2'                    x:Uid="/Shared/OpenSite" Content="Go to my website" Name="Site" Grid.Column="1" Height="50" HorizontalAlignment="Center"/>
                            </Grid>
                        </Grid>
                    </Grid>
