            <HubSection Header="ad" Width="350">
                <DataTemplate>
                    <Grid>
                        <UI:AdControl ApplicationId="4b6d3f0c-15ee-41db-b6ca-a29887f951eb" AdUnitId="11581285" x:Name="Ad" HorizontalAlignment="Center" Height="250" VerticalAlignment="Center" Width="300"/>
